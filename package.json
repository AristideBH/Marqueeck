{
	"name": "@arisbh/marqueeck",
	"version": "0.3.7",
	"description": "Marqueeck is a performant full-featured marquee component for Svelte, style-free, highly customizable and dependency-less.",
	"author": {
		"name": "AristideBH",
		"email": "aristide.bruneau@gmail.com",
		"url": "https://github.com/AristideBH"
	},
	"homepage": "https://marqueeck.vercel.app",
	"license": "MIT",
	"keywords": [
		"sveltekit",
		"marquee",
		"typescript",
		"svelte3",
		"sveltejs",
		"svelte-component"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"pubup": "pnpm publish && pnpm update && git commit -am 'Package.json update after npm publish'",
		"v:patch": "git commit -am 'patch:version update' && pnpm version patch ",
		"v:minor": "git commit -am 'minor:version update' && pnpm version minor",
		"v:major": "git commit -am 'major:version update' && pnpm version major"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^3.54.0"
	},
	"devDependencies": {
		"@skeletonlabs/skeleton": "^1.12.0",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.25.0",
		"@sveltejs/package": "^2.2.2",
		"@types/node": "^20.6.2",
		"@typescript-eslint/eslint-plugin": "^6.7.2",
		"@typescript-eslint/parser": "^6.7.2",
		"autoprefixer": "^10.4.15",
		"eslint": "^8.49.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.33.2",
		"highlight.js": "^11.8.0",
		"postcss": "^8.4.30",
		"postcss-load-config": "^4.0.1",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"publint": "^0.2.2",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.2",
		"svelte-preprocess": "^5.0.4",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.4.9"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	}
}
