{
	"name": "@arisbh/marqueeck",
	"version": "0.5.1",
	"description": "Marqueeck is a performant full-featured marquee component for Svelte, style-free, highly customizable and dependency-less.",
	"author": {
		"name": "AristideBH",
		"email": "aristide.bruneau@gmail.com",
		"url": "https://github.com/AristideBH"
	},
	"homepage": "https://marqueeck.vercel.app",
	"license": "MIT",
	"exports": {
		".": {
			"types": "./dist/package/index.d.ts",
			"svelte": "./dist/package/index.js"
		}
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"files": [
		"dist/package",
		"!dist/package/**/*.test.*",
		"!dist/package/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-vercel": "^5.4.6",
		"@sveltejs/kit": "^2.7.3",
		"@sveltejs/package": "^2.3.7",
		"@typescript-eslint/eslint-plugin": "^8.11.0",
		"@typescript-eslint/parser": "^8.11.0",
		"autoprefixer": "^10.4.20",
		"clsx": "^2.1.1",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"highlight.js": "^11.10.0",
		"lucide-svelte": "^0.453.0",
		"mode-watcher": "^0.4.1",
		"postcss": "^8.4.47",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"publint": "^0.2.12",
		"svelte": "^5.1.3",
		"svelte-check": "^4.0.5",
		"svhighlight": "^0.7.1",
		"tailwind-merge": "^2.5.4",
		"tailwind-variants": "^0.2.1",
		"tailwindcss": "^3.4.14",
		"tslib": "^2.8.0",
		"typescript": "^5.6.3",
		"vite": "^5.4.10"
	},
	"svelte": "./dist/package/index.js",
	"types": "./dist/package/index.d.ts",
	"type": "module",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"dependencies": {
		"@macfja/svelte-persistent-store": "^2.4.1",
		"bits-ui": "^0.10.3"
	}
}
